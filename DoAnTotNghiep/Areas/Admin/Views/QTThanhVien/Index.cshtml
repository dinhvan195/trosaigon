@model List<DoAnTotNghiep.Models.ThanhVien>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAD.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Contacts</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Contacts</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="card card-solid">
        <div class="card-header">
            <h3>Danh sách thành viên</h3>
            <hr />
            <div class="row">
                <div class="col-12 col-sm-4">
                    <a href="#" class="btn btn-sm bg-teal "><i class="fas fa-user-minus"></i></a> Hạ bậc cấp thành viên
                </div>
                <div class="col-12 col-sm-4">
                    <a href="#" class="btn btn-sm btn-success"><i class="fas fa-user-plus"></i></a> Tăng bậc cấp thành viên
                </div>
                <div class="col-12 col-sm-4">
                    <a href="#" class="btn btn-sm btn-danger"><i class="fas fa-user-times"></i></a> Xóa thành viên (xóa cả bài đã viết)
                </div>
            </div>
        </div>
        <div class="card-body pb-0">
            <div class="row d-flex align-items-stretch">
                @foreach (var ad in Model.Where(a=>a.LevelAccess==1))
                {
                <div class="col-12 col-md-4 align-items-stretch">
                    <div class="card bg-light">
                        <div class="card-header text-muted border-bottom-0">
                            Quản trị viên
                        </div>
                        <div class="card-body pt-0">
                            <div class="row">
                                <div class="col-5 text-center">
                                    <img src="~/Images/Avatar/@ad.AnhDaiDien" alt="" class="img-circle img-fluid">
                                </div>
                                <div class="col-7">
                                    <h2 class="lead"><b>@ad.HoTen</b></h2>
                                    <p class="text-muted text-sm"><b>Giới tính: </b>@(ad.GioiTinh == true ? "Nam" : "Nữ") </p>
                                    <p class="text-muted text-sm"><b>Bài viết: </b>@ad.Tin.Count() </p>
                                </div>
                                
                            </div>
                            <hr />
                            <div>
                                <ul class="ml-4 mb-0 fa-ul text-muted">
                                    <li><span class="fa-li"><i class="fas fa-envelope"></i></span>Email: @ad.Email</li>
                                    <li><span class="fa-li"><i class="fas fa-map-marker-alt"></i></span>Address: @ad.DiaChi</li>
                                    <li><span class="fa-li"><i class="fas fa-phone"></i></span> Phone: @ad.SDT</li>
                                </ul>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="text-right">
                                <a href="@Url.Action("ChangeLevel","QTThanhVien",new {MaTV=ad.MaTV })" class="btn btn-sm bg-teal ">
                                    <i class="fas fa-user-minus"></i>
                                </a>
                                <a href="@Url.Action("ViewProfile","QTThanhVien",new {MaTV=ad.MaTV })" class="btn btn-sm btn-primary">
                                    <i class="fas fa-user"></i> View Profile
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                }
            </div>
        </div>
        <hr />
        <div class="card-body pb-0">
            <div class="row d-flex align-items-stretch">
                @foreach (var ad in Model.Where(a => a.LevelAccess != 1))
                {
                    <div class="col-12 col-md-4 align-items-stretch">
                        <div class="card bg-light">
                            <div class="card-header text-muted border-bottom-0">
                                Thành viên
                            </div>
                            <div class="card-body pt-0">
                                <div class="row">
                                    <div class="col-5 text-center">
                                        <img src="~/Images/Avatar/@ad.AnhDaiDien" alt="" class="img-circle img-fluid">
                                    </div>
                                    <div class="col-7">
                                        <h2 class="lead"><b>@ad.HoTen</b></h2>
                                        <p class="text-muted text-sm"><b>Giới tính: </b>@(ad.GioiTinh == true ? "Nam" : "Nữ") </p>
                                        <p class="text-muted text-sm"><b>Bài viết: </b>@ad.Tin.Count() </p>
                                    </div>

                                </div>
                                <hr />
                                <div>
                                    <ul class="ml-4 mb-0 fa-ul text-muted">
                                        <li><span class="fa-li"><i class="fas fa-envelope"></i></span>Email: @ad.Email</li>
                                        <li><span class="fa-li"><i class="fas fa-map-marker-alt"></i></span>Address: @ad.DiaChi</li>
                                        <li><span class="fa-li"><i class="fas fa-phone"></i></span> Phone: @ad.SDT</li>
                                    </ul>
                                </div>
                            </div>
                            <div class="card-footer">
                                <div class="text-right">
                                    <a href="@Url.Action("ChangeLevel","QTThanhVien",new {MaTV=ad.MaTV })" class="btn btn-sm btn-success">
                                        <i class="fas fa-user-plus"></i>
                                    </a>
                                    <a href="@Url.Action("Delete","QTThanhVien",new {MaTV=ad.MaTV })" class="btn btn-sm btn-danger">
                                        <i class="fas fa-user-times"></i>
                                    </a>
                                    <a href="@Url.Action("ViewProfile","QTThanhVien",new {MaTV=ad.MaTV })" class="btn btn-sm btn-primary">
                                        <i class="fas fa-user"></i> View Profile
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        
        
    </div>
</section>

