@model DoAnTotNghiep.Areas.Admin.Models.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<section class="latest-post-area pb-120">
    <div class="container no-padding">
        <div style="margin:auto">
            <div class="login-box" style="margin-left:auto;margin-right:auto">
                <div class="login-logo">
                    <b>Login</b>
                </div>
                <div class="card">

                    <div class="card-body login-card-body">
                        <p class="login-box-msg">Sign in to start your session</p>
                        @using (Html.BeginForm("Log", "Customer", FormMethod.Post))
                        {
                            <div class="input-group mb-3">
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @autofocus = "autofocus" , @placeholder = "Email" })
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="fas fa-envelope"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="input-group mb-3">
                                @Html.PasswordFor(model => model.MatKhau, new { @class = "form-control", @placeholder = "Password" })
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="fas fa-lock"></span>
                                    </div>
                                </div>
                            </div>
                            <div>@Html.ValidationSummary(false, "", new { @class = "text-danger" })</div>
                            <div class="row">

                                <div class="col-8">
                                    <div class="icheck-primary">
                                        @Html.CheckBoxFor(model => model.RememberMe)Remember Me
                                    </div>
                                </div>
                                <!-- /.col -->
                                <div class="col-4">
                                    <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                                </div>
                                <!-- /.col -->
                            </div>
                        }
                        <div class="social-auth-links text-center mb-3">
                            <p>- OR -</p>
                            <a href="#" class="btn btn-block btn-primary">
                                <i class="fab fa-facebook mr-2"></i> Sign in using Facebook
                            </a>
                            <a href="#" class="btn btn-block btn-danger">
                                <i class="fab fa-google-plus mr-2"></i> Sign in using Google+
                            </a>
                        </div>
                        
                        <!-- /.social-auth-links -->
                        <p class="mb-1">
                            <a href="">Quên mật khẩu ?</a>
                        </p>
                        <p class="mb-0">
                            <a href="@Url.Action("Register","Customer")" class="text-center">Chưa có tài khoản vui lòng đăng ký</a>
                        </p>
                    </div>
                    <!-- /.login-card-body -->
                </div>
            </div>
        </div>
    </div>
</section>
<script src="~/Content/Admin/plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="~/Content/Admin/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<!-- AdminLTE App -->
<script src="~/Content/Admin/dist/js/adminlte.min.js"></script>

