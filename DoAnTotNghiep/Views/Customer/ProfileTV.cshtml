@model DoAnTotNghiep.Models.ThanhVien
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="wrapper">
    <!-- Navbar -->
    @Html.Partial("_MenuCustomer")
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Thông tin cá nhân</h1>
                    </div>
                    <div class="col-sm-6">
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-3">
                        <!-- Profile Image -->
                        <div class="card card-primary card-outline">
                            <div class="card-body box-profile">
                                <div class="text-center">
                                    <img class="profile-user-img img-fluid img-circle"
                                         src="~/Images/Avatar/@Model.AnhDaiDien"
                                         alt="User profile picture">
                                </div>
                                <h3 class="profile-username text-center">@Model.HoTen </h3>
                                <p class="text-muted text-center">@(Model.LevelAccess == 1 ? "Admin" : "Member")</p>
                                <ul class="list-group list-group-unbordered mb-3">
                                    <li class="list-group-item">
                                        <b>Phone</b> <a class="float-right">@Model.SDT</a>
                                    </li>
                                    <li class="list-group-item">
                                        <b>Email</b> <a class="float-right">@Model.Email</a>
                                    </li>
                                    <li class="list-group-item">
                                        <b>Giới tính</b> <a class="float-right">@(Model.GioiTinh == true?"Nam":"Nữ")</a>
                                    </li>
                                    <li class="list-group-item">
                                        <b>Số bài viết</b> <a class="float-right">@Model.Tin.Count()</a>
                                    </li>
                                </ul>
                            </div>
                            <!-- /.card-body -->
                        </div>
                    </div>
                   
                    <div class="col-md-9">
                        <div class="card">
                            <div class="card-header p-2">
                                <ul class="nav nav-pills">
                                    <li class="nav-item"><a class="nav-link active" href="#activity" data-toggle="tab">Thông tin chi tiết</a></li>
                                    <li class="nav-item"><a class="nav-link" href="#timeline" data-toggle="tab">Ảnh đại diện</a></li>
                                </ul>
                            </div><!-- /.card-header -->
                            <div class="card-body">
                                <div class="tab-content">
                                    <div class="active tab-pane" id="activity">
                                        <!-- Post -->
                                        <div >
                                            <form action="/Customer/Update" method="post">
                                                <div class="form-group row">
                                                    <label for="inputName" class="col-sm-2 col-form-label">Họ và tên</label>
                                                    <div class="col-sm-10">
                                                        <input type="text" name="HoTen" class="form-control" value="@Model.HoTen">
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label for="inputEmail" class="col-sm-2 col-form-label">Email</label>
                                                    <div class="col-sm-10">
                                                        <input type="email" name="Email" class="form-control" value="@Model.Email">
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label for="inputEmail" class="col-sm-2 col-form-label">Giới tính</label>
                                                    <div class="col-sm-10">
                                                        @Html.DropDownList("GT", null,Model.GioiTinh == true ? "Nam" : "Nữ", new { @class = "form-control" })
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label for="inputName2" class="col-sm-2 col-form-label">Số điện thoại</label>
                                                    <div class="col-sm-10">
                                                        <input type="text" name="SDT" class="form-control" value="@Model.SDT">
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label for="inputExperience" class="col-sm-2 col-form-label">Ghi chú</label>
                                                    <div class="col-sm-10">
                                                        <input type="text" name="GC" class="form-control" value="@Model.GhiChu">
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label for="inputSkills" class="col-sm-2 col-form-label">Địa chỉ</label>
                                                    <div class="col-sm-10">
                                                        <input type="text" name="DC" class="form-control" value="@Model.DiaChi">
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <div class="offset-sm-2 col-sm-10">
                                                        <button type="submit" class="btn btn-danger">Cập nhật</button>
                                                    </div>
                                                </div>
                                                </form>
                                        </div>
                                        <!-- /.post -->
                                    </div>
                                    <!-- /.tab-pane -->
                                    <div class="tab-pane" id="timeline">
                                        <div class="row">
                                            <div class="col-md-3">
                                                <img class="img-thumbnail"
                                                     src="~/Images/Avatar/@Model.AnhDaiDien">
                                            </div>
                                            <div class="col-md-9 ">
                                                @using (Html.BeginForm("AnhDaiDien", "Customer", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                                {
                                                    <div class="form-group">
                                                        <input type="file" name="postedFiles" multiple="multiple" />
                                                    </div>
                                                    <div class="form-group">
                                                        <input type="submit" value="Cập nhật" class="btn btn-success">
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- /.tab-content -->
                            </div><!-- /.card-body -->
                        </div>
                        <!-- /.nav-tabs-custom -->
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
</div>