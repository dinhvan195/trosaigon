@model List<DoAnTotNghiep.Models.LuuTin>
@{
    ViewBag.Title = "TinDaLuu";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="wrapper">
    <!-- Navbar -->
    @Html.Partial("_MenuCustomer")
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Danh sách tin đã lưu</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active">User Profile</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Danh sách bài đăng</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <table class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>Tiêu Đề</th>
                                            <th>Người viết</th>
                                            <th></th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>Tiêu Đề</th>
                                            <th>Người viết</th>
                                            <th></th>
                                            <th></th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        @foreach (var t in Model)
                                        {
                                            <tr>
                                                <td>@t.Tin.TieuDe</td>
                                                <td>@t.Tin.ThanhVien.HoTen</td>
                                                <th>@Html.ActionLink("Chi tiết","Detail","Post", new { MaTin = t.MaTin })</th>
                                                <th>
                                                    @Html.ActionLink("Xóa tin","XoaTinLuu", "Customer", new { MaTin = t.MaTin },new { onclick = "return confirm('Bạn có muốn xóa bài viết này khỏi danh sách lưu?')" })
                                                </th>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
</div>

