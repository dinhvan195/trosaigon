@using DoAnTotNghiep.Models
@{
    ThanhVien kh = (ThanhVien)Session["KH"];
}

<div class="col-lg-6 col-md-6 col-sm-6 col-6 header-top-right no-padding">
    @if (kh != null)
    {
    <ul>
        <li>
            <a href="@Url.Action("ProfileTV","Customer")"><i class="fa fa-user"></i> @kh.HoTen</a>
            <a href="@Url.Action("Logout","Customer")">[Đăng xuất]</a>
        </li>
    </ul>
    }
    else
    {
    <ul>
        <li><a href="@Url.Action("Login","Customer")"><i class="fa fa-user"></i> Đăng nhập</a></li>
        <li><a href="@Url.Action("Register","Customer")"><i class="fa fa-user-plus"></i> Đăng ký</a></li>
    </ul>
    }
</div>
